@model IEnumerable<AutoPartsHub.Models.TblItemColor>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12">

        <div class="card">
            <div class="card-header bg-theme ">
                <h4 class="card-title text-white">Brands</h4>
                <button type="button" class="btn bg-white" id="CreateUser">

                    <a asp-action="Create" class=" text-theme" style="color:#fff">Create New</a>
                </button>

            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-responsive-md">
    <thead>
        <tr>
            <th>
                                    Color
            </th>
            <th>
                                    Item
            </th>
            <th>
                                    Color Price
            </th>
            <th>
                                    Is Default
            </th>
           
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Color.ColorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item.ItemName)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.ColorPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDefault)
            </td>
                                    <td style="display:flex;margin-left:30px !important">
                                        <a asp-action="Edit" class="btn btn-sm m-2 btn-primary " asp-route-id="@item.ItemColorId"><i class="fa fa-edit"></i></a>

                                        <form asp-action="Delete" method="post" class="deleteForm">
                                            <input type="hidden" name="id" value="@item.ItemColorId" asp-for="@item.ItemColorId" />
                                            <button type="submit" class="btn btn-danger btn-sm m-2"><i class="fa fa-trash"></i></button>
                                        </form>
                                    </td>
        </tr>
}
    </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
