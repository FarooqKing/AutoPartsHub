@model IEnumerable<AutoPartsHub.Models.TblItemTag>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col-12">

        <div class="card">
            <div class="card-header bg-theme">
                <h4 class="card-title text-white">ItemTags</h4>
                <button type="button" class="btn bg-white" id="CreateUser">

                    <a asp-action="Create" class="text-theme" style="color:#fff">Create New</a>
                </button>

            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-responsive-md">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Item)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Tag)
                                </th>
                                <th>
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Item.ItemName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Tag.TagName)
                                    </td>
                                    <td style="display:flex;margin-inline:0px !important">
                                        <a asp-action="Edit" class="btn btn-square btn-primary" asp-route-id="@item.ItemTagId"><i class="fa fa-edit"></i></a> 
                                        
                                    <form asp-action="Delete" method="post" class="deleteForm">
                                            <input type="hidden" name="id" value="@item.ItemTagId" asp-for="@item.ItemTagId" />
                                            <button type="submit" class="btn btn-danger btn-sm m-2"><i class="fa fa-trash"></i></button>
                                        </form> </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                </div>
            </div>
        </div>
    </div>


