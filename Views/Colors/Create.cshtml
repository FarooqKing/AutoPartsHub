@model AutoPartsHub.Models.TblColor

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<style>
    .btnf-r{
        float: right !important;
    }


</style>

<div class="row">
    <div class="col-12">

        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Add Colors</h4>
               

            </div>

            <div class="card-body">
        <div class="form-validation">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <label asp-for="ItemId" class="control-label">Item</label>
                        <select asp-for="ItemId" class="form-control" asp-items="ViewBag.ItemId">
                            <option>-----Select Item-----</option>
                        </select>
                        <span asp-validation-for="ItemId" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="ColorName" class="control-label"> Color Name</label>
                        <input asp-for="ColorName" class="form-control" />
                        <span asp-validation-for="ColorName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mt-4">
                        <label asp-for="ColorExtraAmount" class="control-label"> Amount</label>
                        <input asp-for="ColorExtraAmount" class="form-control" />
                        <span asp-validation-for="ColorExtraAmount" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mt-4">
                        <label asp-for="IsDefaultColor" class="control-label">Is Default</label>
                        <input asp-for="IsDefaultColor" class="form-control" />
                        <span asp-validation-for="IsDefaultColor" class="text-danger"></span>
                    </div>

                    <div class="col-md-12 mt-4">
                                <input type="submit" value="Create" class="btn btn-success  btnf-r " />
                                <a asp-action="Index" class="btn btn-warning btnf-r" style="margin-right:4px !important">Back to List</a>
                     
                    
                      
                           
                       
                    </div>

                </div>

            </form>
        </div>
    </div>
</div>
</div>
</div>
