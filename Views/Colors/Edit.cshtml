                <span asp-validation-for="ColorName" class="text-danger"></span>
            </div>
                <div class="col-md-6 mt-4">
                                <label asp-for="ColorExtraAmount" class="control-label">Color Extra Amount</label>
                <input asp-for="ColorExtraAmount" class="form-control" />
                <span asp-validation-for="ColorExtraAmount" class="text-danger"></span>
            </div>
                <div class="col-md-6 mt-4">
                                <label asp-for="IsDefaulColor" class="control-label">Is Defaul Color</label>
