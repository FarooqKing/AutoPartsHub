@model AutoHubFYP.Models.TblItemSize

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .btnf-r {
        float: right !important;
    }
</style>

<div class="row">
    <div class="col-12">

        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Add Item Size</h4>


            </div>

            <div class="card-body">
                <div class="form-validation">


        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SizeId" />
            <div class="form-group row">
            <div class="col-md-6">
                                <label asp-for="ItemId" class="control-label">Item Id</label>
                <select asp-for="ItemId" class="form-control" asp-items="ViewBag.ItemId"></select>
                <span asp-validation-for="ItemId" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                                <label asp-for="SizeName" class="control-label">Size Name</label>
                <input asp-for="SizeName" class="form-control" />
                <span asp-validation-for="SizeName" class="text-danger"></span>
            </div>
            <div class="col-md-6 mt-4">
                                <label asp-for="SizeExtraAmount" class="control-label">Size Extra Amount</label>
                <input asp-for="SizeExtraAmount" class="form-control" />
                <span asp-validation-for="SizeExtraAmount" class="text-danger"></span>
            </div>
            <div class="col-md-6 mt-4">
                                <label asp-for="IsDefaultSize" class="control-label">Is Default Size</label>
                <input asp-for="IsDefaultSize" class="form-control" />
                <span asp-validation-for="IsDefaultSize" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-md-12 mt-4">
                <input type="submit" value="Save" class="btn btn-success btnf-r " />
    <a asp-action="Index" class="btn btn-warning btnf-r" style="margin-right:2px !important">Back to List</a>
            </div>
            </div>
            </div>
        </form>
    </div>
</div>



        </div>
    </div>
</div>
