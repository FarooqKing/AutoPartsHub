@model IEnumerable<AutoHubFYP.Models.TblCategory>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@* INDEX TABLE DESIGN *@

<div class="row">
    <div class="col-12">

        <div class="card">
            <div class="card-header bg-theme ">
                <h4 class="card-title text-white">Categories</h4>
                <button type="button" class="btn bg-white" id="CreateColor">

                    <a asp-action="Create" class="text-theme" style="color:#fff" id="CreateRoll">Create New</a>
                </button>

            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-responsive-md">



    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryTital)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryImage)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryTital)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryImage)
            </td>
            <td>

                                    <td style="display: flex;margin-left: -20px !important;">
                                        <a asp-action="Edit" class="btn  btn-square btn-primary" asp-route-id="@item.CategoryId"><i class="fa fa-edit "></i></a>

@*                  <a asp-action="Details" asp-route-id="@item.CategoryId">Details</a> |
 *@
                                        <a asp-action="Delete" class="btn  btn-square btn-danger" asp-route-id="@item.CategoryId"><i class="fa fa-trash-o "></i></a>
                                    </td>

            
        </tr>
}
    </tbody>
</table>
                </div>
            </div>
        </div>
    </div>
</div>