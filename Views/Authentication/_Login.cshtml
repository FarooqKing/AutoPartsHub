@model AutoPartsHub.Models.Login

@{
    ViewData["Title"] = "Login";
}

<div class="login-form-style">
    <div class="site-logo text-center text-sm-start m-4 mb-5">
        <a href="/Authentication/Login"><img src="/assets/img/AutoLogo.png" class="ml-auto mr-auto" alt="Logo" /></a>
    </div>
    <div class="form-validation">
    <form id="loginForm" asp-controller="Authentication" asp-action="Login" method="post">
        <div>
            <input asp-for="Email" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div>
            <input asp-for="Password" type="password" placeholder="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="login-toggle-btn">
            <input asp-for="RememberMe" type="checkbox" id="login-check" />
            <label for="login-check">Remember me</label>
            <a href="/Authentication/ForgotPassword">Forgot Password?</a>
        </div>
        <div class="login-btn">
            <button type="submit">Login</button>
        </div>
    </form>
    </div>
    @if (Model.isInvalid)
    {
        <div class="text-danger">
            @Model.InvalidMessage
        </div>
    }
</div>

@section Scripts{
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#loginForm').submit(function (event) {
                event.preventDefault();
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Login", "Authentication")',
                    data: $(this).serialize(),
                    success: function (response) {
                        if (response.success) {
                            window.location.href = '@Url.Action("Index", "Home")';
                          Toast.success("You are Successfully Login")
                        } else {
                            $('#loginError').text(response.message);
                        }
                    },
                    error: function (xhr, status, error) {
                        // Handle any unexpected errors
                        console.error('Error during login:', xhr.responseText);
                        $('#loginError').text('An error occurred during login. Please try again.');
                    }
                });
            });
        });

    </script>
}
